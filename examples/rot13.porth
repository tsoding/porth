include "std.porth"

macro BUFFER_CAP 1024 end
macro buffer mem end

while BUFFER_CAP buffer stdin read dup 0 > do
  0 while 2dup > do
    dup buffer + ,

    dup 'a' >= over 'z' <= band if
      2dup 'a' - 13 + 26 mod 'a' +
      swap buffer + swap .
    end

    dup 'A' >= over 'Z' <= band if
      2dup 'A' - 13 + 26 mod 'A' +
      swap buffer + swap .
    end

    drop

    1 +
  end drop

  buffer stdout write drop
end drop
